<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">


        <include layout="@layout/toolbar" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@+id/toolbar"
            android:divider="@drawable/divider_vertical"
            android:gravity="center"
            android:orientation="vertical"
            android:padding="16dp"
            android:showDividers="middle">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/nawabiat"
                android:gravity="center"
                android:padding="15dp"
                android:text="@string/let_s_get_started"
                android:textSize="36sp"
                android:textStyle="bold" />

            <RelativeLayout
                android:layout_width="200dp"
                android:layout_height="200dp">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:background="@drawable/avatar"
                    android:foregroundGravity="center"
                    android:padding="25dp"
                    android:src="@drawable/face" />

                <de.hdodenhof.circleimageview.CircleImageView
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:layout_alignParentBottom="true"
                    android:layout_alignParentRight="true"
                    android:src="@color/offWhite" />

                <de.hdodenhof.circleimageview.CircleImageView
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:layout_alignParentBottom="true"
                    android:layout_alignParentRight="true"
                    android:src="@drawable/ic_add_black_24dp" />
            </RelativeLayout>

            <EditText
                android:id="@+id/fullName"
                style="@style/SignUpText"
                android:hint="Full name"
                android:inputType="text" />

            <EditText
                android:id="@+id/emailText"
                style="@style/SignUpText"
                android:hint="@string/email"
                android:inputType="textEmailAddress" />

            <EditText
                android:id="@+id/passwordText"
                style="@style/SignUpText"
                android:hint="@string/password"
                android:inputType="textPassword" />

            <EditText
                android:id="@+id/passwordRetype"
                style="@style/SignUpText"
                android:layout_marginBottom="3dp"
                android:hint="@string/retype_password"
                android:inputType="textPassword" />

            <TextView
                android:id="@+id/boardText"
                style="@style/SignUpText"
                android:layout_marginBottom="3dp"
                android:textSize="25sp" />

            <TextView
                android:id="@+id/classText"
                style="@style/SignUpText"
                android:layout_marginBottom="3dp"
                android:textSize="25sp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <com.hbb20.CountryCodePicker
                    android:id="@+id/countryPhoneNumber"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:ccp_autoDetectCountry="true"
                    app:ccp_countryPreference="KW" />

                <EditText
                    android:id="@+id/textPhoneNumber"
                    style="@style/SignUpText"
                    android:hint="@string/mobile"
                    android:inputType="phone" />

            </LinearLayout>


            <android.support.v7.widget.AppCompatButton
                android:id="@+id/buttonSignUp"
                style="@style/StyleLoginButtonSolid"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/sign_up" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/nawabiat"
                android:gravity="center"
                android:padding="15dp"
                android:text="@string/terms_and_conditions"
                android:textStyle="bold" />
        </LinearLayout>

        <ProgressBar
            android:id="@+id/progress"
            style="@style/ProgressBarStyle" />
    </RelativeLayout>
</ScrollView>