<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/exerciseSingle"
    style="@style/HomeCardStyles"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_below="@id/homeTopItems"
    android:minHeight="100dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="15dp"
        android:gravity="center"
        android:orientation="vertical"
        android:padding="15dp">

        <TextView
            android:id="@+id/topicName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/nawabiat"
            android:padding="10dp"
            android:textSize="20sp"
            android:textStyle="bold" />

        <android.support.v7.widget.RecyclerView
            android:id="@+id/recyclerExercise"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="5dp" />

        <ProgressBar
            android:id="@+id/progressExercise"
            style="@style/ProgressBarStyle" />

        <TextView
            android:id="@+id/textNoExerciseAvailable"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_centerInParent="true"
            android:fontFamily="@font/nawabiat"
            android:gravity="center"
            android:text="@string/text_no_content_available"
            android:textSize="25sp"
            android:visibility="gone" />
    </LinearLayout>
</android.support.v7.widget.CardView>
