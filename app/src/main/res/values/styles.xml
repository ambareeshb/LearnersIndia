<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="StyleLoginButtonHollow">
        <item name="android:textAllCaps">false</item>
        <item name="android:textSize">22sp</item>
        <item name="android:layout_margin">5dp</item>
        <item name="android:background">@drawable/button_login_bg</item>
        <item name="android:fontFamily">@font/nawabiat</item>
    </style>

    <style name="StyleLoginRectangleButtonHollow">
        <item name="android:minWidth">300dp</item>
        <item name="android:gravity">center</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">25sp</item>
        <item name="android:layout_margin">10dp</item>
        <item name="android:background">@drawable/rectangle_button_bg</item>
        <item name="android:fontFamily">@font/nawabiat</item>
    </style>

    <style name="StyleLoginButtonSolid">
        <item name="android:textAllCaps">false</item>
        <item name="android:textSize">22sp</item>
        <item name="android:layout_margin">5dp</item>
        <item name="android:background">@drawable/button_solid</item>
        <item name="android:textColor">@color/offWhite</item>
        <item name="android:fontFamily">@font/nawabiat</item>
    </style>

    <style name="SignUpText" parent="Base.ThemeOverlay.AppCompat.Dark">
        <item name="android:fontFamily">@font/nawabiat</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:textSize">20sp</item>
        <item name="android:textCursorDrawable">@null</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:lines">1</item>
    </style>

    <style name="SignInText" parent="">
        <item name="android:fontFamily">@font/nawabiat</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:textCursorDrawable">@null</item>
        <item name="android:textSize">20sp</item>
        <item name="android:layout_marginBottom">10dp</item>
        <item name="android:lines">1</item>
    </style>

    <style name="ProgressBarStyle" parent="@style/Theme.AppCompat.Light.Dialog">
        <item name="android:visibility">gone</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_centerInParent">true</item>
    </style>

    <style name="HintAppearance" parent="Widget.Design.TextInputLayout">
        <item name="android:fontFamily">@font/nawabiat</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="HomeItemStyle">
        <item name="android:layout_margin">5dp</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="UserProfileBottomButtonsStyle">
        <item name="android:textStyle">bold</item>
        <item name="android:fontFamily">@font/nawabiat</item>
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">@color/colorBlue</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">wrap_content</item>
    </style>

    <style name="UserProfileTextStyles">
        <item name="android:textColor">@color/colorBlue</item>
        <item name="android:fontFamily">@font/nawabiat</item>
        <item name="android:layout_marginLeft">10dp</item>
        <item name="android:textSize">18sp</item>
    </style>

    <style name="HomeCardStyles" parent="CardView">
        <item name="cardCornerRadius">5dp</item>
        <item name="android:layout_margin">20dp</item>
        <item name="cardElevation">5dp</item>
    </style>

    <style name="LightToolbar" parent="Base.ThemeOverlay.AppCompat.Dark.ActionBar">
        <item name="android:textColorPrimary">@color/white</item>
        <item name="android:textColorSecondary">@color/white</item>
    </style>

    <style name="ToolbarTextStyle">
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">23sp</item>
        <item name="android:fontFamily">@font/nawabiat</item>
    </style>

    <style name="EditTextWhite">
        <item name="android:textCursorDrawable">@null</item>
    </style>
</resources>
