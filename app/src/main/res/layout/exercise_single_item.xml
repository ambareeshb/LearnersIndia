<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="20dp"
    android:animateLayoutChanges="true"
    android:background="@android:color/transparent"
    android:padding="@dimen/marginAverage"
    android:paddingLeft="5dp"
    android:paddingRight="5dp"
    tools:ignore="WebViewLayout">

    <TextView
        android:id="@+id/textQuestionTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="5dp"
        android:fontFamily="@font/nawabiat"
        android:textSize="18sp" />

    <WebView
        android:id="@+id/exerciseTitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/textQuestionTitle"
        android:background="@android:color/transparent"
        android:fontFamily="@font/nawabiat"
        android:gravity="center"
        android:padding="10dp"
        android:textSize="@dimen/exerciseTitle"
        android:textStyle="bold" />

    <WebView
        android:id="@+id/exerciseSolution"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/exerciseTitle"
        android:background="@android:color/transparent"
        android:fontFamily="@font/nawabiat"
        android:gravity="center"
        android:textSize="@dimen/exersiseContent" />

    <TextView
        android:id="@+id/viewAnswer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_below="@id/exerciseSolution"
        android:clickable="true"
        android:fontFamily="@font/nawabiat"
        android:padding="@dimen/marginAverage"
        android:text="View Solution"
        android:textColor="@color/colorPrimary"
        android:textSize="16sp" />

</RelativeLayout>