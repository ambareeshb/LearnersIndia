<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <include layout="@layout/simple_toolbar" />


    <android.support.v7.widget.RecyclerView
        android:id="@+id/exerciseRecycler"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/toolbar" />

    <ProgressBar
        android:id="@+id/progressExerciseList"
        style="@style/ProgressBarStyle" />

    <TextView
        android:id="@+id/textNoExerciseAvailable"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/toolbar"
        android:layout_centerInParent="true"
        android:background="@color/offWhite"
        android:fontFamily="@font/nawabiat"
        android:gravity="center"
        android:text="@string/text_no_content_available"
        android:textSize="@dimen/noContentAvailable"
        android:visibility="gone" />
</RelativeLayout>
